<% include header %>

<div class="ui segment">
<h2 class="ui right floated header">Profile</h2>
<br>
<hr>
<br>
<div class="ui grid">
  <div class="doubling three column row">
    <div class="column">
		<div class="ui segment">
			<form class="ui form segment" method="post" action="/profile/upload/1" enctype="multipart/form-data">
				<% if (profilePic) { %>
                	<img alt="User Pic" src="images/upload_images/<%=profilePic%>" class="ui medium circular image">	
				<% } else { %>
					<img class="ui medium circular image" src="images/profile/lio.jpg">
				<% } %>
				<input class="form-control" type="file" name="uploaded_image" accept=""/>
				<hr>
				<div class="ui center">
					<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Submit ">
            	</div>
			</form>
		</div>
	</div>
    <div class="column">
		<div class="ui segment">
			<div class="ui teal empty circular label"></div> Online
			<hr class="ui">
			<form class="ui form segment" method="post" action="/profile/base">
				<div class="ui large header" style="color:white"> <%= locals.name + ' ' + locals.surname %> </div>
			<% if (locals.gender == "male") { %>
				<p>
					Men, <%= locals.age %> years old
				</p>
			<% } else if (locals.gender == "female") { %>
				<p>
					Women, <%= locals.age %> years old
				</p>
			<% } %>
			<% if (locals.interest == "male") { %>
				<p> Interested in: &nbsp; Men <p>
			<% } else if (locals.interest == "female") { %>
				<p> Interested in: &nbsp; Women <p>
			<% } else if (locals.interest == "both") { %>
				<p> Interested in: &nbsp; Both <p>
			<% } %>
			<hr class="ui">
				<div class="two fields">
					<div class="field">
						<label>Edit Name</label>
						<input placeholder="First Name" name="name" type="text">
					<hr class="ui">
						<div class="ui center">
							<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Submit ">
						</div>
					</div>
					<div class="field">
						<label>Edit surname</label>
						<input placeholder="Last Name" name="surname" type="text">
					<hr class="ui">
						<div class="ui center">
							<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Submit ">
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
	<div class="column">
	<div class="ui segment">
	<form class="ui form segment" method="post" action="/profile">
		<div class="tag">
			<% if (tag) { %>
				<% tag.forEach(function(element) { %>
					<% var tag = element["tag"] %>
					<a class="ui label">
						<%= element["tag"] %>
						<a class="tagdel" href="profile_edit/tag/<%= tag %>">
						<i class="delete icon"></i>
						</a>
					</a>
				<% }) %>
			<% } %>
		</div>
		<div class="field">
			<label>Enter your interests</label>
			<input type="text" name="tag" placeholder="exemple: musculation">
		</div>
		<div class="ui center">
			<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Submit ">
		</div>
	</form>
	</div>
	</div>
	</div>
	<% if (!locals.ok) { %>
		<div class="ui top pointing red basic label" style="background:none;height:2%">
			Please first edit your profile
		</div>
	<% } %>

	<a href="user/<%= locals.signin %>">Preview your profile</a>
			
	<br>
	<hr style="width:100%">
	<div class="ui four doubling cards">
		<div class="ui segment">
			<form <% if (!photo1) { %> class="ui form oklm" <% } else { %> class="ui form" <% } %> class="ui form" method="post" action="/profile/upload/2" enctype="multipart/form-data">
			<div class="card">
				<div class="image">
					<% if (!photo1) { %>
						<img style="width:50%" src="/images/profile/lio.jpg">
					<% } else { %>
						<img src="/images/upload_images/<%=photo1%>">
					<% } %>
				</div>
			</div>
			<input class="form-control" type="file" name="uploaded_image" accept=""/>
			<hr>
				<div class="ui center">
					<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Submit ">
				</div>
			</form>
		</div>
		<div class="ui segment">
			<form <% if (!photo2) { %> class="ui form oklm" <% } else { %> class="ui form" <% } %> method="post" action="/profile/upload/3" enctype="multipart/form-data">
			<div class="card">
				<div class="image">
					<% if (!photo2) { %>
						<img style="width:50%" src="/images/profile/lio.jpg">
					<% } else { %>
						<img src="/images/upload_images/<%=photo2%>">
					<% } %>
				</div>
			</div>
			<input class="form-control" type="file" name="uploaded_image" accept=""/>
			<hr>
				<div class="ui center">
					<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Submit ">
				</div>
			</form>
		</div>
		<div class="ui segment">
			<form <% if (!photo3) { %> class="ui form oklm" <% } else { %> class="ui form" <% } %> class="ui form" method="post" action="/profile/upload/4" enctype="multipart/form-data">
			<div class="card">
				<div class="image">
					<% if (!photo3) { %>
						<img style="width:50%" src="/images/profile/lio.jpg">
					<% } else { %>
						<img src="/images/upload_images/<%=photo3%>">
					<% } %>
				</div>
			</div>
			<input class="form-control" type="file" name="uploaded_image" accept=""/>
			<hr>
				<div class="ui center">
					<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Submit ">
				</div>
			</form>
		</div>
		<div class="ui segment">
			<form <% if (!photo4) { %> class="ui form oklm" <% } else { %> class="ui form" <% } %> class="ui form" method="post" action="/profile/upload/5" enctype="multipart/form-data">
			<div class="card">
				<div class="image">
					<% if (!photo4) { %>
						<img style="width:50%" src="/images/profile/lio.jpg">
					<% } else { %>
						<img src="/images/upload_images/<%=photo4%>">
					<% } %>
				</div>
			</div>
			<input class="form-control" type="file" name="uploaded_image" accept=""/>
			<hr>
				<div class="ui center">
					<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Submit ">
				</div>
			</form>
		</div>
	</div>
	<div class="ui segment textarea">
	<div class="column">
	<form class="ui form segment" method="post" action="/profile/des">
		<div class="ui form">
			<div class="field">
				<label>Description</label>
				<textarea name="descri" placeholder="exemple: Sakhile Msibi lives in JHB is a guy who loves to learn new things"><% if (locals.descri) %><%= locals.descri %></textarea>
            </div>
			<div class="ui center">
				<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Submit ">
            </div>
		</div>
		</form>

	</div>
	</div>
	</div>
</div>

<% include footer %>
