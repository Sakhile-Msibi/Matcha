<% include header %>

<div id="wrapper">
<div id="page-content-wrapper">
<div class="container-fluid">
<div class="ui container segment">
    <h4>Tell Us About Yourself</h4>
	<hr>
	<div class="field example">
	    <img src="images/matcha1.png" class="logoform">
		<form class="ui form segment" id="signinform" method="post" action="/register">
			<div class="two fields">
				<div class="field">
					<label>Name</label>
                    <input
                        placeholder="First Name"
                        name="name"
                        type="text"
                        id="name"
                    >
				</div>
				<div class="field">
					<label>Gender</label>
					<div class="ui dropdown selection" tabindex="0">
						<select name="gender" id="gender">
                            <option value="">Gender</option>
                            <option value="female">Female</option>
                            <option value="male">Male</option>
                            <option value="lesbian">Lesbian</option>
                            <option value="gay">Gay</option>
                            <option value="bisexual">Bisexual</option>
                            <option value="transgender">Transgender</option>
							<option value="other">Other</option>
						</select>
							<i class="dropdown icon"></i>
							<div class="default text">Gender</div>
							<div class="menu" tabindex="-1">
                                <div class="item" data-value="female">Female</div>
                                <div class="item" data-value="male">Male</div>
                                <div class="item" data-value="lesbian">Lesbian</option>
                                <div class="item" data-value="gay">Gay</option>
                                <div class="item" data-value="bisexual">Bisexual</option>
                                <div class="item" data-value="transgender">Transgender</option>
								<div class="item" data-value="other">Other</div>
							</div>
					</div>
				</div>
			</div>
			<div class="two fields">
				<div class="field">
					<label>Surname</label>
                    <input
                        placeholder="Surname"
                        name="lastname"
                        type="text"
                        id="surname"
                    >
				</div>
				<div class="field">
					<label>Email</label>
                    <input
                        placeholder="emailaddress@emailprovider.com"
                        name="email"
                        type="email"
                        id="email"
                    >
				</div>
			</div>
			<div class="two fields">
				<div class="field">
					<label>Username</label>
                    <input
                        placeholder="Username"
                        name="username"
                        type="text"
                        id="username"
                    >
				</div>
				<div class="field">
					<label>City</label>
                    <input
                        placeholder="City"
                        name="city"
                        type="text"
                        id="city"
                    >
				</div>
			</div>
			<div class="two fields">
				<div class="field">
					<label>Password</label>
                    <input
                        placeholder="Password"
                        name="password"
                        type="password"
                        id="password"
                    >
				</div>
				<div class="field">
					<label>Repeat Password</label>
                    <input
                        placeholder="Repeat password"
                        name="repeatpasssword"
                        type="password"
                        id="repeatpassword"
                    >
				</div>
			</div>
			<div class="two fields">
				<div class="field">
					<label>Date of Birth</label>
                    <input
                        type="date"
                        name="DOB"
                        id="DOB"
                    >
				</div>
				<div class="field">
					<label>Interest</label>
					<div class="ui dropdown selection" tabindex="0">
						<select name="interest" id="interest">
                            <option value="">Interest</option>
                            <option value="female">Female</option>
							<option value="male">Male</option>
							<option value="both">Both</option>
						</select>
						<i class="dropdown icon"></i>
						<div class="default text">interest</div>
						<div class="menu" tabindex="-1">
                            <div class="item" data-value="female">Female</div>
                            <div class="item" data-value="male">Male</div>
							<div class="item" data-value="both">Both</div>
						</div>
					</div>
				</div>
			</div>
			<div class="ui center">
				<INPUT class="ui submit button" TYPE="submit" NAME="button" VALUE="Submit">
            </div>
			<div class="ui error message"></div>
		</form>
	</div>
	<hr>
	<center><a href="/signin">Sign in</a></center>
</div>

</div>
</div>
<!-- /#page-content-wrapper -->
</div>
<!-- wrapper -->

<% include footer %>

<script>
	$('.ui.form')
	.form({
	fields: {
		name: {
			identifier: 'name',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please enter your name'
			  },
			  {
				type   : 'minLength[2]',
				prompt : 'Your name is too short'
			  }
			]
		},
		gender: {
			identifier: 'gender',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please select your Gender'
			  }
			]
		},
		surname: {
			identifier: 'surname',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please enter your surname'
			  }
			]
		},
		email: {
			identifier: 'email',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please enter your email'
			  }
			]
		},
		username: {
			identifier: 'username',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please enter a username'
			  }
			]
		},
		city: {
			identifier: 'city',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please enter your city'
			  }
			]
		},
		password: {
			identifier: 'password',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please enter your password'
			  },
			  {
				type   : 'minLength[8]',
				prompt : 'Your password must contain at least 8 charectors'
			  }
			]
		},
		repeatpasssword: {
			identifier: 'repeatpassword',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please enter your password again'
			  },
			  {
				type   : 'minLength[8]',
				prompt : 'Your password must contain at least 8 charectors'
			  }
			]
		},
		age: {
			identifier: 'age',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please enter your date of birth'
			  }
			]
		},
		interest: {
			identifier: 'interest',
			rules: [
			  {
				type   : 'empty',
				prompt : 'Please enter your interests'
			  }
			]
		},

	}
	});
</script>
