<% include header %>

<div class="ui segment">
	<h2 class="ui right floated header">Password reset</h2>
	<br>
	<hr>
		<form class="ui form segment" method="post" action="/password_reset">
		<div class="fields">
			<div class="field">
				<label>Password</label>
				<input type="password" name="pswd" id="message" maxlength="160" class="text"/>
			</div>
			<div class="field">
				<label>Enter password again</label>
				<input type="password" name="repwsd"/>
			</div>
			<input type="hidden" name="usr" value="<%=id %>" class="text"/>
			<div class="ui center">
				<input type="submit" class="ui primary submit button send" value="Submit" class="submit"/>
			</div>
		</div>
	</form>
</div>

<% include footer %>
